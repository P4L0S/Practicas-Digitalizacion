  }}
  
//NIVEL 1

void juego(){
  player();
  enemigo();
  PotPuntos();
  HUD();
  temp(5);
  PotFreno();
  tiempoFreno();
}

//ENEMIGO

int PosEneX = 160;
int PosEneY = 50;
int velEneOri = 5;
int velEne = velEneOri;
int velEneFre = 2;
int tX = 50;
int tY = 50;
int xJUGADOR = 160-tX;
int yJUGADOR = 160-tY;
int velocidad =10;

void enemigo(){
 
  int EneX = 40;
  int EneY = 40;
  
  //ENEMIGO
  image("https://wallpapers.com/images/hd/aesthetic-pixel-art-hd-zx9lnoxvvasrxsw0.jpg",0,0,325,325);
  image("https://github.com/P4L0S/Practicas-Digitalizacion/blob/main/IMAGEN/pixil-frame-0%20(2).png?raw=true",PosEneX,PosEneY,EneX,EneY);
  
  if (PosEneX > xJUGADOR+tX/2){
    PosEneX = PosEneX - velEne;
  }
  if (PosEneX < xJUGADOR+tX/2){
    PosEneX = PosEneX + velEne;
  } 
  if (PosEneY > yJUGADOR+tY/2){
    PosEneY = PosEneY - velEne;
  }
  if (PosEneY < yJUGADOR+tY/2){
    PosEneY = PosEneY + velEne;
  } 
  
  //JUGADOR
  image("https://github.com/P4L0S/Practicas-Digitalizacion/blob/main/IMAGEN/pixil-frame-0%20(1).png?raw=true",xJUGADOR,yJUGADOR,tX,tY);
  
  
  if (keyPressed && key =="up") {
    yJUGADOR = yJUGADOR-velocidad;
    }
  if (keyPressed && key =="down") {
    yJUGADOR = yJUGADOR+velocidad;
    }
  if (keyPressed && key =="left") {
    xJUGADOR = xJUGADOR-velocidad;
    }
  if (keyPressed && key =="right") {
    xJUGADOR = xJUGADOR+velocidad;
    }
  
  if (xJUGADOR <= 0){
    xJUGADOR = 0;
  }
  if (xJUGADOR >= 320-tX){
    xJUGADOR = 320-tX;
  }
  if (yJUGADOR <= 0){
    yJUGADOR = 0;
  }
  if (yJUGADOR >= 320-tY){
    yJUGADOR = 320-tY;
  }
}



//CARAMELO

double CARAMELOX = random (50,280);
double CARAMELOY = random (50,280);
int puntos =0;

void PotPuntos(){
  image("https://github.com/P4L0S/Practicas-Digitalizacion/blob/main/IMAGEN/pixil-frame-0%20(3).png?raw=true", CARAMELOX-4,CARAMELOY+2,35,35);
  if (xJUGADOR+(tX/2)+5 > CARAMELOX && xJUGADOR+(tX/2)-5 <CARAMELOX && yJUGADOR+(tY/2)+5 > CARAMELOY && yJUGADOR+(tY/2)-5 <CARAMELOY){
    puntos += 1;
    CARAMELOX = random (50,280);
		CARAMELOY = random (50,280);
  }
}

//PUNTOS DE LOS CARAMELOS
void HUD(){
  fill(255,255,255);
  rect(8,2,120,15);
  fill(0,0,0);
  textSize(10);
  text ("PIRULETAS:   "+ puntos, 10,15);
}

//FRENO
double PotX = random (10,310);
double PotY = random (10,310);
int frenado = 1;
void PotFreno(){
  
 if (tiempo == -1){
   	PotX = random (10,310);
		PotY = random (10,310);
    }
  if (tiempo == 1 ){
  image("https://github.com/P4L0S/Practicas-Digitalizacion/blob/main/IMAGEN/pixilart-sprite.png?raw=true",PotX, PotY, 300,150);
  if (x+(tX/2)+5 > PotX && x+(tX/2)-5 < PotX && y+(tY/2)+5 > PotY && y+(tY/2)-5 < PotY){
    velEne = velEneFre;
   	frenado = -1;
    PotX = random (10,310);
		PotY = random (10,310);
  }}
}

//TIEMPO 

int t1 = millis()/1000;
int tiempo = -1;
void temp(int t){
  int a = -t1 + millis()/1000;
  if(a>=t){
    t1=millis()/1000;
    a = - t1 + millis()/1000;
    tiempo =tiempo*(-1);
    
  }
 
}
void tiempoFreno(){
  if (frenado == -1){
    
  tempEneFre(5);
}
}

int t2 = millis()/1000;
void tempEneFre(int t){
  int a = -t1 + millis()/1000;
  if(a>=t){
    print (velEne);
    t2=millis()/1000;
    a = - t1 + millis()/1000;
    velEne = velEneOri;
    frenado = -1;
  }
}

