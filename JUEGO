//JUGADOR
int x=120;
int y=120;

void ejecutar(){
  player();
 
}           
void player(){
  image("https://st3.depositphotos.com/2419757/32425/v/450/depositphotos_324257814-stock-illustration-computer-graphic-of-pixel-game.jpg",0,0,325,325); 
  nombrePantalla();   
  fill(255,255,255);
  rect(10,10,40,40);
  fill(161,0,255);
  textSize(20);
  text ("<" ,20,37);
  
  fill(255,255,255);
  rect(80,10,210,40);
  fill(255,255,255);
  rect(10,100,210,20);
  fill(255,255,255);
  rect(10,150,290,20);
  
  fill(191,27,27);
  text("¿Cómo se juega?",80,40);
  textSize(10);
  text("*Debes alimentar a Kerby*",20,115);
  textSize(10);
  text("*Mientras lo alimentas debes esquivar la Luna*",15,165);
  
  image("https://github.com/P4L0S/Practicas-Digitalizacion/blob/main/IMAGEN/pixil-frame-0%20(1).png?raw=true",x,y,75,75);
  if(keyPressed && key=="up"){
    println("Arriba");
    y = y -10;}
  
    if(keyPressed && key=="down"){
      println("Abajo");
      y = y +10;}
  
  if(keyPressed && key=="right"){
    println("Derecha");
    x = x+10;}
  
  if(keyPressed && key=="left"){
    println("Izquierda");
    x = x-10;}
  
  if(x==0){
    x=150;}
  
  if(y==0){
    y=150;}
  
  if(y==310){
    y=150;}
  
  if(x==300){
    animate(juego);}
    boton();
    funcionboton();
}

