void salir(){
  fill(255,255,255);
  rect(100,240,120,40);
  fill(173,0,255);
  text ("Salir" ,140, 265);
  if (mouseX>=100 && mouseX<=220 && mouseY>=240 && mouseY<=280){
  fill (0,0,500);
  rect(100,240,120,40);
  fill(100,211,233);
  text ("salir" ,140, 265);
  if (mousePressed) {println("salir");
                    animate(fondo);   
                    }}}
                               
                               
