void name(){
  fill(0,255,155);
  rect(1,261,80,39);
  fill(155,0,255);
  String nombre = readString("Escribe tu nombre");
  print("hola ");
  print(nombre);
  println(" bienvenido a la aventura");
  int anchoHola = textWidth(" ");
  int anchoEspacio = textWidth(" ");
  text(nombre, anchoHola+anchoEspacio, 290);   
           }


void clasificacion(){
  println(mouseY);
  fill(245,245,245);
  rect (260,10,40,40);
  fill(2,2,2);
  text ("?" ,270,40);
  if (mouseX>=260 && mouseX<=300 && mouseY>=10 && mouseY<=50){
  fill (0,0,500);
  rect(260,10,40,40);
   fill(0,200,500);
  text ("?" ,270,40); 
  if (mousePressed) {println("Ranking");
                    animate(clasificacion2); 
                                     }}}




  
