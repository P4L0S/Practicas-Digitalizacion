    posY += 20;
  }
        

           
  
}
        
        
int x=120;
int y=120;

void ejecutar(){
  player();
 
}           
void player(){
  image("https://st3.depositphotos.com/2419757/32425/v/450/depositphotos_324257814-stock-illustration-computer-graphic-of-pixel-game.jpg",0,0,325,325);
   fill(255,255,255);
  rect(10,10,40,40);
  fill(161,0,255);
    textSize(20);
   text ("<" ,20,37);
    image("https://github.com/P4L0S/Practicas-Digitalizacion/blob/main/IMAGENES/pixil-frame-0.png?raw=true",x,y,150,150);
  if(keyPressed && key=="up"){
    println("Opa");
    y = y -10;}
    if(keyPressed && key=="down"){
      println("Ayiyi");
      y = y +10;}
  if(keyPressed && key=="right"){
    println("Pa la derecha");
    x = x+10;}
  if(keyPressed && key=="left"){
    println("Pa la izquierda");
    x = x-10;}
  if(x==0){
    x=120;}
  if(y==0){
    y=120;}
  if(x==250){
    x=120;}
  if(y==250){
    y=120;}
  if (mouseX>=10 && mouseX<=50 && mouseY>=10 && mouseY<=50){
  fill (0,0,500);
  rect(10,10,40,40);
  fill (0,200,500);
    textSize(20);
  text ("<" ,20,37);
     if (mousePressed) {println("<");
                        animate(menuprincipal);
  }}}
