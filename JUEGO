  text ("?" ,270,40);
  if (mouseX>=260 && mouseX<=300 && mouseY>=10 && mouseY<=50){
  fill (0,0,500);
  rect(260,10,40,40);
   fill(0,200,500);
    text ("?" ,270,40);
  } 
}
void funcionbotonranking(){
  if (mousePressed){
    if (mouseButton==LEFTBUTTON){
      if (mouseX>=260){
        if (mouseX<=300){
          if (mouseY>=10){
            if (mouseY<=50);
            animate(clasificacion2);
            println("Ranking");
          }
        }
        
      }
    }
  }
}





//LO QUE HACE EL BOTON
void funcionboton(){
  if (mousePressed){
    if (mouseButton==LEFTBUTTON){
      if (mouseX>=10){
        if (mouseX<=50){
          if (mouseY>=10){
            if (mouseY<=50);
            animate(menuprincipal);
          }
        }
        
      }
    }
  }
}
 
