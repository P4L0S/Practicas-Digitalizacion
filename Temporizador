//Recordatorio:
   //*se crashea a veces y empieza restando desde el 50 por alguina extra√±a razon.
   //*El texto al principio se queda mal puesto y se ve pixelado.

int t1 = second()/1;

void main(){
  animate(ejecutar1);}

void ejecutar1(){
  text("5 segundos y cambia el color del fondo",15,40);
  textSize(13);
  int a = t1 - second()/1;
  println ("Segundos"+ a );
  if(a<=-5){ 
    t1=second()/1;   
    a = t1 - second()/1;
    background(random(256),random(256),random(256));}
}
