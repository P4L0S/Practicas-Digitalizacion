int t1 = millis()/1000;

void main(){
  animate(ejecutar1);}

void ejecutar1(){
  text("5 segundos y cambia el color del fondo",15,40);
  textSize(13);
  int a = t1 - millis()/1000;
  println ("Segundos"+ a );
  if(a<=-5){ 
    t1=millis()/1000;   
    a = t1 - millis()/1000;
    background(random(256),random(256),random(256));}
}
